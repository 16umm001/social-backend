# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{py, rsi, ini}]
indent_size = 4
indent_style = space

[*.py]
max_line_length = 119
known_first_party = social
multi_line_output = 3
skip_glob = */migrations/**, */venv/**, */doc/**

[*.{html, css, scss, json, yml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_size = tab
